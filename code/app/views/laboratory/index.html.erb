    <%= form_tag("/laboratory/buy", method: "post") do %>
        <%= hidden_field_tag 'tech_id' %>
        <%= hidden_field_tag 'buy_method' %>
        <div class="modal fade" id="mymodal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><span id="productTitle"></span></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Etes-vous sûr de vouloir acheter ce produit pour <span id="priceSpan"></span>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"> Payer </button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    <% end %>

</div>

<script>

    function hideAll(){
        $("#batLink").removeClass("active");
        $("#DALink").removeClass("active");
        $("#DPLink").removeClass("active");
        $("#ShipLink").removeClass("active");

        $("#batTech").css("display", "none");
        $("#dpTech").css("display", "none");
        $("#daTech").css("display", "none");
        $("#shipTech").css("display", "none");
    }

    function showBatiment(){
        hideAll();
        $("#batLink").addClass("active");
        $("#batTech").css("display", "block");
    }

    function showDA(){
        hideAll();
        $("#batLink").removeClass("active");
        $("#DALink").addClass("active");
        $("#daTech").css("display", "block");
    }

    function showDP(){
        hideAll();
        $("#batLink").removeClass("active");
        $("#DPLink").addClass("active");
        $("#dpTech").css("display", "block");
    }

    function showShip(){
        hideAll(); 
        $("#batLink").removeClass("active");
        $("#ShipLink").addClass("active");
        $("#shipTech").css("display", "block");
    }

    function clickModal(id, name, price, buyMethod){
        console.log(name);
        selectedID = id;
        selectedName = name;
        selectedCost = price;
        $("#productTitle").html(selectedName);
        $("#priceSpan").html(selectedCost);
        $("#tech_id").attr('value', id);
        $("#buy_method").attr('value', buyMethod);
    }


</script>

