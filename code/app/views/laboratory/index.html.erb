<div class="jumbotron">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
            <a class="nav-link active" onclick="showBatiment();" id="batLink">Bâtiment</a>
            </li>

            <li class="nav-item">
            <a class="nav-link" onclick="showDP();" id="DPLink">Défense passive</a>
            </li>
                    
            <li class="nav-item">
            <a class="nav-link" onclick="showDA();" id="DALink">Défense active</a>
            </li>

            <li class="nav-item">
            <a class="nav-link" onclick="showShip();" id="ShipLink">Vaisseau</a>
            </li>
        </ul>
    </div>

    <div style="display : block;" id="batTech">
        <div class="card-header text-center">
            Technologie du bâtiment
        </div>
        <% Technology.where(typeTech: "bâtiment").each do |t|%>
            <div class="card card-outline-primary mb-3 text-center">
                <div class="card-block text-center">
                    <h4 class="card-title"><%= t.name%></h4>
                    <p class="card-text"><%= t.description %></p>
                    <% unless @actual_user.technologies.include? t %>
                        <% if @actual_user.energy >= t.costEnergy %>
                            <button type="button" class="btn btn-primary" onclick="clickModal(<%= t.id %>, '<%= t.name %>', <%= t.costEnergy %>, 0)" data-toggle="modal" data-target="#mymodal">Acheter avec <%= t.costEnergy %> d'energie</button>
                        <% else %>
                            <h5 class="text-danger">Il vous manque <%= t.costEnergy - @actual_user.energy %> énergie afin d'acquérir cette technologie</h5>
                        <%end%>
                        <% if @actual_user.money >= t.costMoney %>
                            <button type="button" class="btn btn-danger" onclick="clickModal(<%= t.id %>, '<%= t.name %>', <%= t.costMoney %>, 1)" data-toggle="modal" data-target="#mymodal">Acheter avec <%= t.costMoney %> monnaie galactique</button>
                        <% else %>
                            <h5 class="text-danger">Il vous manque <%= t.costMoney - @actual_user.money %> énergie afin d'acquérir cette technologie</h5>
                        <%end%>
                    <% else %>
                        <h5 class="text-success">Technologie acquise !</h5>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>

